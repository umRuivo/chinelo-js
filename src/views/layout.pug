doctype html
html(lang="pt-br")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")  
    if title && title.length > 0
      title=  title + " - " + globalData.siteName
    else
      title= globalData.siteName 
    link(rel="stylesheet", href="/css/style.css")
    link(rel="stylesheet", href="/css/bootstrap.min.css")
  body.bg-dark.text-light
    header
      nav.navbar.navbar-expand-lg.navbar-dark
        .container-fluid
          a.navbar-brand(href="/")= globalData.siteName
          button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
            span.navbar-toggler-icon
          .collapse.navbar-collapse#navbarNav
            ul.navbar-nav
              li.nav-item
                a.nav-link(href="/" + globalData.sufix) Início
              li.nav-item
                a.nav-link(href="/user/list" + globalData.sufix) Usuários
              if !user
                li.nav-item
                  a.nav-link(href="/login" + globalData.sufix) Login
            if user
              ul.navbar-nav.ms-auto
                li.nav-item
                  a.nav-link(href="/login/logout" + globalData.sufix) Logout (#{user.name})

    main.container.mt-4
      block content

    footer.footer.mt-auto.py-3.bg-dark.text-light.text-center
      .container
        span &copy; 2025 Meu Site
    script(src="/js/bootstrap.bundle.min.js")
    block scripts
